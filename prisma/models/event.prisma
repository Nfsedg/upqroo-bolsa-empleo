model Event {
  id              String    @id @default(cuid())
  title           String
  description     String    @db.Text
  imageUrl        String? // URL to the event image
  eventType       String // bootcamp, job_fair, course, workshop, etc.
  startDate       DateTime
  endDate         DateTime?
  location        String? // Physical location or "Online"
  isOnline        Boolean   @default(false)
  maxAttendees    Int? // Maximum number of attendees (optional)
  registrationUrl String? // External registration URL
  isActive        Boolean   @default(true)

  // Company relation
  companyId String
  company   company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  // Location relation (optional)
  stateId Int?
  state   State? @relation(fields: [stateId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId])
  @@index([startDate])
  @@index([eventType])
}
